generator client {
  provider = "prisma-client-js"
}

datasource db {
  //* For sqlite.
  // provider = "sqlite"
  // url      = "file:./dev.db"
  //* For postgresql.
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  publicAddress String   @unique @default("")
  nonce         Int      @default(0)
}

model Post {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  prompt         String   @default("")
  negativePrompt String   @default("")
  imageUrl       String   @unique @default("")
  isEncrypted    Boolean  @default(false)
}

model Avatar {
  id                    Int      @id @default(autoincrement())
  createdAt             DateTime @default(now())
  nftAddressWithTokenId String   @unique @default("")
  nftAddress            String   @default("")
  tokenId               Int      @default(0)
  name                  String   @default("")
  symbol                String   @default("")
  description           String   @default("")
  imageUrl              String   @default("")
  gltUrl                String   @default("")
  vrmUrl                String   @default("")
  hair                  String   @default("")
  face                  String   @default("")
  top                   String   @default("")
  middle                String   @default("")
  side                  String   @default("")
  bottom                String   @default("")
  body                  String   @default("")
  body_top              String   @default("")
  body_bottom           String   @default("")
  background            String   @default("")
}
